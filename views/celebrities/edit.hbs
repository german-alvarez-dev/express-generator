<div class="row justify-content-center">

    <div class="col-md-7">

        <h2>Edit</h2>

        <form method="POST" action="/celebrities/editar-celebrity?celebrity_id={{_id}}">

            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" name="name" value="{{name}}">
            </div>
            <div class="form-group">
                <label>Occupation</label>
                <input type="text" class="form-control" name="occupation" value="{{occupation}}">
            </div>
            <div class="form-group">
                <label>CatchPhrase</label>
                <input type="text" class="form-control" name="catchPhrase" value="{{catchPhrase}}">
            </div>
            <button type="submit" class="btn btn-info">Edit</button>
        </form>
    </div>
</div>